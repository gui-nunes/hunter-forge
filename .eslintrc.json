{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "next",
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "semi": true,
        "singleQuote": true,
        "printWidth": 80,
        "trailingComma": "es5",
        "tabWidth": 2
      }
    ],
    "react/react-in-jsx-scope": "off",
    "no-unused-vars":"off",
    "no-console": "warn"
  }
}
